<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context="com.tangyx.seekbar.MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.seekbar.sliding.text.TextSeekBar
            android:id="@+id/only_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tickCount="2"/>
        <TextView
            android:id="@+id/go_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@+id/only_back"
            android:textColor="@android:color/black"
            android:text="@string/go_only"/>
        <TextView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/go_only"
            android:textColor="@android:color/black"
            android:text="@string/go_back"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.seekbar.sliding.SlidingSeekBar
            android:id="@+id/time_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tickCount="5"
            app:tickHeight="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:connectingLineColor="@android:color/black"
            app:barColor="@color/color_e0e8ee"
            app:barWeight="1.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:text="@string/init_time00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/init_time06"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/init_time12"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/init_time18"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:text="@string/init_time24"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
